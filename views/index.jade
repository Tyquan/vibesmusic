extends layout

block content
  div(id="main-body")
    ins(class="adsbygoogle" style="display:block" data-ad-client="ca-pub-2487455590278875" data-ad-slot="1048447853" data-ad-format="auto" data-full-width-responsive="true")
    if videos < 1
      h1(class="text-center") No Videos Added Yet
    else
      div(id="topMargin")
      div(class="row")
        div(class="col-md-8")
          div(id="latestVideoContainer")
            center
              div(id="latest")
            div(id="latest_ten")
        div(class="col-md-4")
          div(id="sideBg")
            br
            h3(class="text-center" style="color:white") NEWS
            div(id="latest_news")
            hr
            h3(class="text-center" style="color:white") INTERVIEWS
            div(id="latest_interviews")
            hr
            h3(class="text-center" style="color:white") PODCASTS
            div(id="latest_podcasts")
  script(src="/javascripts/videos/latest.js")
  script(src="/javascripts/videos/latest_news.js")
  script(src="/javascripts/videos/latest_interviews.js")
  script(src="/javascripts/videos/latest_podcasts.js")
  script(src="/javascripts/videos/latest_ten.js")